#include "ZonaTransporte.h"

ZonaTransporte::ZonaTransporte(uint ID, 
		 Mundo &mundo,
		 real ancho,
		 real alto,
		 const b2Vec2 &posicion,
		 const b2Vec2 &posicionDestino) :
		 Cuerpo(ID, 
			mundo,
			ancho,
			alto,
			MASAINFINITA,
			CONSTRUCCION | POWERUP,
			PERSONAJES,
			posicion,	
			false,
			false,	
			b2Vec2_zero,
			derecha,
			true),
		 posicionDestino(posicionDestino)
			     
{
}

char tipoCuerpo() const
{
	return CONSTRUCCION | POWERUP;
}

bool interactuar(Entidad *entidad)
{
	entidad->modificarPosicion(posicionDestino);
}


